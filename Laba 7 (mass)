#include <stdio.h>
#include <stdlib.h>
 
int main(){
    int i, m, n, max, maxi, m2, f, maxpos, pos;
    printf("Введите размер массива:\n");
    scanf("%d",&m);
    int *mass = (int*) malloc(m * sizeof(int));
    for(i=0; i< m; i++){
        printf("mass[%d] = ", i);
        scanf("%d",&mass[i]);}
        
/// 1 ///
    
    max = mass[0];
    for(i=1; i< m; i++){
        if (mass[i] > max){
            max = mass[i];
            maxi = i;}}
    printf("Максимальный номер: %d\n",maxi);
    
/// 2 ///
    
    n = 1;
    for(i=0; i< m; i++){
        if (mass[i] == 0 && i < m){
            for(int j=i+1; j < m; j++){ ///
                if (mass[j] == 0){
                    break;}
                n = n*mass[j];}
            break;}}
    printf("Произведение элементов массива: %d\n",n);
 
 /// 3 ///

    int *mass2 = (int*) malloc(m * sizeof(int));
    f = 1;
    for(i=0; f < m ; i++){
        mass2[i] = mass[f];
        f = f + 2;}
    f = 0;
    for(; i < m && f < m; i++){
        mass2[i] = mass[f];
        f = f+2;}
    printf("Новый массив:\n");
    for(i=0; i < m ; i++){
        printf("%d\n",mass2[i]);}
        
/// 4 ///

    maxpos = 0;
    int j = 0;  ///
    for(i=0; i< m; i++){
        pos = 0;
        if (mass[i] == 0 && i < m){
           for(j=i+1; j< m && mass[j] != 0; j++){
               pos++;}}
       i = j-1;
        if (maxpos < pos){
            maxpos = pos;}}
    printf("Длина последовательности: %d\n",maxpos);
    
    free(mass);  
    free(mass2);
return(0);}
