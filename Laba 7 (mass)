#include <stdio.h>
#include <stdlib.h>

int main(){
    int max, i, n, maxi, first, last, sum, f, qu, maxqu;
    printf("Размер массива: ");
    scanf("%d",&n);

   int mass[n];
    for(i=0; i< n; i++){
        printf("mas[%d]= ", i);
        scanf("%d",&mass[i]);
    }

/// 1 ///

    max = mass[0];
    for(i=1; i< n; i++){
        if (mass[i] > max){
            max = mass[i];
            maxi=i;
        }
    }
    printf("Максимальный номер: %d\n",maxi);

/// 2 ///

    first = 0;
    for (int i = 0; i < n; i++){
        if (mass[i] == 0){
            first = i;
            break;
        }
    }
    last = 0;
    for (int i = n - 1; i >= 0; i--){
        if (mass[i] == 0){
            last = i;
            break;
        }
    }
    sum = 0;
    for (int i = first; i <= last; i++){
        sum = sum * mass[i];
    }
    printf("Произведение элементов: %d\n", sum);
 
/// 3 ///
 
    int mass2[n];
    f = 1;
    for(i=0; f < n ; i++){
        mass2[i] = mass[f];
        f = f + 2;
    }
    f = 0;
    for(; i < n && f < n; i++){
        mass2[i] = mass[f];
        f = f+2;
    }
    printf("Новый массив: \n");
    for(i=0; i < n ; i++){
        printf("%d\n",mass2[i]);
    }

/// 4 ///
 
    maxqu=0;
    qu=0;
    for(i=0; i<n; i++){
        if (mass[i]==0 && mass[i+1]==0){
            qu+=1;
        }
        if (qu>maxqu){
            maxqu=qu;
        }
    }
    printf("Длинна последовательности: %d\n",maxqu);
    return(0);
}
