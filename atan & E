#include <stdio.h>
#include <math.h>

#define PI 3.14159265

int main(){
    float a,x,E,c;
    int n;
    printf("Введите значение x:");
    scanf("%f",&x);
    printf("Введите значение Е:");
    scanf("%f",&E);
    for(int n = 0;n>=0;n++){
        c = (PI/2 + (pow(-1,(n+1)))/(2*n+1)*(pow(x,(2*n+1))));
        if((x>1) && (c<=E)){
            printf("c = %.2f\n",c);
            break;
        }
        if((x>1) && (c>E)){
            continue;
        }
        if(x<=1){
            printf("Ошибка!\n");
            break;
        }
    }
    a = atan(x);
    if(a<=E)
    printf("a = %2.f\n",a);
    if(a>E)
    printf("Ошибка!\n");
    return(0);
}
